{
  "name": "smart-clipboard",
  "version": "1.1.1",
  "description": "A smart clipboard manager with history and quick paste features",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "clipboard",
    "manager",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "Md. Humayun Kabir",
    "email": "humayun126224@gmail.com",
    "url": "https://github.com/humayun63"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.1.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.smartclipboard.app",
    "productName": "Smart Clipboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "settings.html",
      "settings.css",
      "settings.js",
      "icon.png",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.png",
      "target": [
        "dmg",
        "zip"
      ],
      "arch": [
        "universal"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
