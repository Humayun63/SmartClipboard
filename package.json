{
  "name": "smart-clipboard",
  "version": "1.0.0",
  "description": "A smart clipboard manager with history and quick paste features",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["clipboard", "manager", "electron", "desktop"],
  "author": "SmartClipboard",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.smartclipboard.app",
    "productName": "Smart Clipboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 